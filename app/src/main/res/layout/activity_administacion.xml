<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B6FFCE"
        android:padding="10dp"
        android:orientation="vertical"
        tools:context=".administacionActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F6FFA4"
            android:gravity="center"
            android:orientation="horizontal">

        <EditText
                android:hint="INGRESE DEL CODIGO A BUSCAR"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:id="@+id/txtSearch"/>

        <TextView
                android:id="@+id/txtID"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_width="30dp"
                android:layout_height="match_parent"/>
    </LinearLayout>

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#F6FFA4">

        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_marginTop="5dp"
                  android:gravity="center">
            <ImageView
                    android:id="@+id/imgView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="#B6FFCE"
            />
            <Button

                    android:id="@+id/btnCamara"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CAMARA"
                    android:textColor="#B6FFCE"
                    android:backgroundTint="#FFA8A8"
                    android:textSize="20sp"
            />

        </TableRow>


        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

            <EditText
                    android:inputType="text"
                    android:id="@+id/txtNombre"
                    android:hint="Nombre" android:layout_weight="2"/>
        </TableRow>

        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">>

            <EditText
                    android:inputType="number"
                    android:id="@+id/txtStock"
                    android:hint="Stock" android:layout_weight="1"/>
            <EditText
                    android:inputType="number"
                    android:id="@+id/txtPrecio"
                    android:hint="Precio" android:layout_weight="1"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <EditText
                    android:inputType="text"
                    android:id="@+id/txtDescripcion"
                    android:hint="Descripcion" android:layout_weight="2"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <Button
                    android:id="@+id/btnCreate"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Agregar"
                    android:textColor="#B6FFCE"
                    android:backgroundTint="#FFA8A8" android:layout_weight="1"/>
            <Button
                    android:id="@+id/btnUpdate"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="EDITAR"
                    android:textColor="#B6FFCE"
                    android:backgroundTint="#FFA8A8" android:layout_weight="1"/>
            <Button
                    android:id="@+id/btnDelete"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ELIMINAR"
                    android:textColor="#B6FFCE"
                    android:backgroundTint="#FFA8A8" android:layout_weight="1"/>
        </TableRow>

        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:gravity="center">

            <Button
                    android:id="@+id/btnRegresar"
                    android:text="REGRESAR"
                    android:textColor="#B6FFCE"
                    android:backgroundTint="#FFA8A8"
                    android:onClick="irLista"/>
        </TableRow>

    </TableLayout>


</LinearLayout>