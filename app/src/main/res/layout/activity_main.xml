<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B6FFCE"
        android:padding="10dp"
        tools:context=".MainActivity" android:orientation="vertical">
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="535dp"
            android:background="#F6FFA4"
            android:padding="5dp"
            android:id="@+id/listProductos"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FDD7AA"
            android:gravity="center"
            android:orientation="horizontal" android:onClick="irAdministracion">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFA8A8"
                android:textColor="#B6FFCE"
                android:text="ADMINISTRACION"
                android:id="@+id/btnADMINISTRACION" android:onClick="irAdministracion"/>
    </LinearLayout>


</LinearLayout>